# Ghostty terminal configuration

auto-update = download

# Font
font-family = JetBrainsMono Nerd Font
font-size = 14
adjust-cell-height = 40%

# Window
window-width = 160
window-height = 40
window-padding-x = 0
window-padding-y = 0
macos-titlebar-style = tabs
macos-icon = holographic
macos-icon-frame = chrome
window-step-resize = true

# Cursor
cursor-style = block

# Theme
theme = colibri
